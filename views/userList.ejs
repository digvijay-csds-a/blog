<!-- adminUsers.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - User List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .text-center {
            text-decoration: underline;
            font-family: 'Courier New', Courier, monospace;
            font-size: 40px;
            color:white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="./logo2.png" width="120" height="70" alt="Logo">
        </a>
        <span class="fs-1" style="font-family:'Courier New', Courier, monospace">
            Admin
        </span>
    </nav>
    <div class="container-fluid mt-1">
        <h2 class="text-center bg-success">List of Users</h2>
        <form action="/assign" method="POST">
            <table class="table table-striped border border-dark border-2">
                <thead>
                    <tr class="fs-3" style="font-family: 'Times New Roman', Times, serif;">
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Assign Roles</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td>
                                <div class="form-group">
                                   
                                    <select 
                                        class="form-select border border-dark" 
                                        name="roles-<%= user.id %>" 
                                        id="roles-<%= user.id %>" 
                                        
                                    >
                                        <option value="" disabled selected hidden="true" >Select a role</option> <!-- Placeholder -->
                                        <% roles.forEach(role => { %>
                                            <option class="fw-bold"style="font-family: 'Courier New', Courier, monospace;" value="<%= role.id %>" <%= user.role_id === role.id ? 'selected' : '' %>>
                                                <%= role.role %>
                                            </option>
                                        <% }) %>
                                    </select>
                                    
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                    
                    
                </tbody>
            </table>
            <button type="submit" class="btn btn-success" id="btn"style="border-radius:20px">Assign Roles</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</body>
</html>
